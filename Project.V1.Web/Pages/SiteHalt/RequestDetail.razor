@page "/hud/worklist/{id}"
@layout MainLayoutHalt

<PageTitlePat Title="SMP (Halt | Unhalt | Decom) - Request Detail" />

<style type="text/css">
    .custom-font {
        font-size: 13px;
        font-weight: 400;
        color: rgba(0,0,0,0.42);
        padding-top: 0px;
    }

    .validation-message {
        font-size: 13px;
        font-weight: 400;
    }

    #toast_type .e-toast-icon.e-icons {
        height: auto;
        font-size: 30px;
    }

    .toast-icons.e-success::before {
        content: "\e701";
    }

    .toast-icons.e-error::before {
        content: "\e700";
    }

    .toast-icons.e-info::before {
        content: "\e704";
    }

    .toast-icons.e-warning::before {
        content: "\e703";
    }

    #toast_types {
        text-align: center;
    }

    @@font-face {
        font-family: 'Toast_icons';
        src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    .toast-icons {
        font-family: 'Toast_icons' !important;
        speak: none;
        font-size: 55px;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    textarea {
        height: 65px;
        resize: none !important;
    }

    .custom-label {
        color: rgba(0,0,0,0.84) !important;
        font-size: 13px !important;
    }

    .e-input[disabled], .e-input-group .e-input[disabled], .e-input-group.e-control-wrapper .e-input[disabled], .e-input-group.e-disabled, .e-input-group.e-control-wrapper.e-disabled, .e-float-input input[disabled], .e-float-input.e-control-wrapper input[disabled], .e-float-input textarea[disabled], .e-float-input.e-control-wrapper textarea[disabled], .e-float-input.e-disabled, .e-float-input.e-control-wrapper.e-disabled {
        -webkit-text-fill-color: rgba(0,0,0,0.82) !important;
    }
</style>

<div class="col-sm-12 m-0 p-0" style="background: url('images/celltower-black.jpg'); background-size: cover; background-position: center right;">
    <div class="display-4 text-white" style="padding: 4rem 2rem;">
        Request Detail
    </div>
</div>

<BreadcrumbHalt OnAuthenticationCheck="AuthenticationCheck" Paths="@Paths" />


@if (RequestToUpdate == null)
{
    <PageLoading />
}
else
{
    <div class="col-md-12">
        <SfToast CssClass="@ToastCss" ID="toast_default" @ref="ToastObj" Timeout="10000" Icon="e-circle_info"
             ShowCloseButton="true" NewestOnTop="true" ShowProgressBar="true">
            <ToastPosition X="@ToastPosition"></ToastPosition>
        </SfToast>
    </div>
    <EditForm Model="@RequestToUpdate" OnValidSubmit='HandleValidSubmit' OnInvalidSubmit='HandleValidSubmit'>
        <ObjectGraphDataAnnotationsValidator />
        <div class="col-md-12" style="">
            <div class="col-md 12 row">
                <HaltRequestControl ShouldEnable="true" RequestModel="@RequestToUpdate"
                                ShowRequired="true"
                                BaseSecondLevelApprovers="BaseSecondLevelApprovers" BaseThirdLevelApprovers="BaseThirdLevelApprovers" 
                                BaseFirstLevelApprovers="BaseFirstLevelApprovers"/>

                 <div class="col-md-3 mt-3">
                    <div class="form-group">
                        <div class="col-sm-12 p-0 mt-4">
                            <SfTextBox Enabled="false" Readonly="true" CssClass="" FloatLabelType="@FloatLabelType.Auto" Placeholder="Approver Comment"
                                Value="@RequestToUpdate.GetApproverComment"></SfTextBox>
                        </div>
                    </div>
                </div>

                 <div class="col-md-3 mt-3">
                    <div class="form-group">
                        <div class="col-sm-12 p-0 mt-4">
                            <SfButton CssClass="px-2" type="submit" IsPrimary="true" IconCss="@ButtonIconCss"
                                  IconPosition="IconPosition.Right">Update Request</SfButton>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </EditForm>
}