<style type="text/css">
    .textarea {
        height: 70px;
        resize: none !important;
    }

    textarea.e-input,
    .e-float-input textarea,
    .e-float-input.e-control-wrapper textarea,
    .e-input-group textarea,
    .e-input-group.e-control-wrapper textarea {
        height: 70px;
        resize: none !important;
    }

    .form-group .required-field::after {
        content: '**';
        margin-right: 4px;
        font-size: 13px;
        color: red;
    }

    .required-field label {
        font-weight: 500 !important;
    }

    .custom-font {
        font-size: 13px;
        font-weight: 400;
        color: rgba(0,0,0,0.82);
        padding-top: 0px;
    }

    .validation-message {
        font-size: 13px;
        font-weight: 400;
    }

    #toast_type .e-toast-icon.e-icons {
        height: auto;
        font-size: 30px;
    }

    .toast-icons.e-success::before {
        content: "\e701";
    }

    .toast-icons.e-error::before {
        content: "\e700";
    }

    .toast-icons.e-info::before {
        content: "\e704";
    }

    .toast-icons.e-warning::before {
        content: "\e703";
    }

    #toast_types {
        text-align: center;
    }

    @@font-face {
        font-family: 'Toast_icons';
        src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    .toast-icons {
        font-family: 'Toast_icons' !important;
        speak: none;
        font-size: 55px;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    .e-dialog .e-dlg-header {
        color: red;
        font-size: 13px;
        font-weight: normal;
    }

    .e-dialog .e-dlg-content {
        color: red;
        font-size: 10px;
        font-weight: normal;
        line-height: normal;
    }

    textarea.e-input,
    .e-float-input textarea,
    .e-float-input.e-control-wrapper textarea,
    .e-input-group textarea,
    .e-input-group.e-control-wrapper textarea {
        resize: none;
    }
</style>

@if (RequestModel != null)
{
    <div class="multiline col-12 p-0">
        <label for="filePath" class="col-form-label custom-font mb-3" style="">Request Type</label><br />
        <SfButtonGroup CssClass="e-flat">
            <ButtonGroupButton>Halt</ButtonGroupButton>
            <ButtonGroupButton>Un-halt</ButtonGroupButton>
            <ButtonGroupButton>Decomission</ButtonGroupButton>
        </SfButtonGroup>
    </div>

    <div class="multiline col-12 p-0 mt-5">
        <SfTextBox CssClass="textarea" FloatLabelType="@FloatLabelType.Auto" Multiline=true Placeholder="Enter Site IDs separated by comma or space"
               Blur="BlurHandler" @bind-Value="RequestModel.SiteIds"></SfTextBox>
    </div>

    <div class="col-12 mt-1 p-0 mb-3">
        <SfChip @ref="SiteIDChips" EnableDelete="true">
            <ChipEvents Deleted="@OnDelete"></ChipEvents>
        </SfChip>
    </div>

    <div class="row">
        <div class="col-md-6 mt-1">
            <SfTextBox CssClass="textarea" FloatLabelType="@FloatLabelType.Auto" Multiline=true Placeholder="Request Reason"
                   @bind-Value="RequestModel.Reason"></SfTextBox>
        </div>

        <div class="col-md-6 mt-1">
            <label for="filePath" class="col-form-label custom-font" style="">Supporting Document</label>
            <SfUploader AllowMultiple="false" MinFileSize="1000" MaxFileSize=@MaxFileSize AutoUpload="true" CssClass=""
                    @ref="SF_Uploader" @bind-Value="RequestModel.SupportingDocument">
                <UploaderEvents OnClear="OnClear" OnRemove="OnRemove" ValueChange="OnFileSSVUploadChange"></UploaderEvents>
            </SfUploader>
            <ValidationMessage For="@(() => RequestModel.SupportingDocument)" />
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <SfDropDownList TValue="string" TItem="ApplicationUser" FloatLabelType="@FloatLabelType.Auto" Placeholder="Radio Frequency SM" 
                DataSource="@FirstLevelApprovers" @bind-Value="RequestModel.FirstApproverId">
                <DropDownListFieldSettings Text="Fullname" Value="Id"></DropDownListFieldSettings>
            </SfDropDownList>
            <ValidationMessage For="@(() => RequestModel.FirstApproverId)" />
        </div>
        <div class="col-md-4">
            <SfDropDownList TValue="string" TItem="ApplicationUser" FloatLabelType="@FloatLabelType.Auto" Placeholder="Second Approver" 
                DataSource="@SecondLevelApprovers" @bind-Value="RequestModel.SecondApproverId">
                <DropDownListFieldSettings Text="Fullname" Value="Id"></DropDownListFieldSettings>
            </SfDropDownList>
            <ValidationMessage For="@(() => RequestModel.SecondApproverId)" />
        </div>
        <div class="col-md-4">
            <SfDropDownList TValue="string" TItem="ApplicationUser" FloatLabelType="@FloatLabelType.Auto" Placeholder="Third Approver" 
                DataSource="@ThirdLevelApprovers" @bind-Value="RequestModel.ThirdApproverId">
                <DropDownListFieldSettings Text="Fullname" Value="Id"></DropDownListFieldSettings>
            </SfDropDownList>
            <ValidationMessage For="@(() => RequestModel.ThirdApproverId)" />
        </div>
    </div>
}