@using Microsoft.AspNetCore.Hosting
@using Microsoft.AspNetCore.Mvc.ViewEngines
@inject IWebHostEnvironment Environment
@inject ICompositeViewEngine Engine
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SMP</title>
    <link rel="stylesheet" href="~/Identity/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Identity/css/site.css" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" />
    <link rel="shortcut icon" type="image/vnd.microsoft.icon" href="~/images/favicon.ico" />
    <style type="text/css">
        html, body {
            font-family: FiraSans, 'Helvetica Neue', Helvetica, Arial, sans-serif;
        }

        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            overflow: hidden;
            white-space: nowrap;
            line-height: 60px;
            background: rgba(0, 0, 0, 0.7);
            color: #ffffff;
        }

        .btn-mtn {
            background-color: #fdca04;
            border: 1px solid #000000;
            border-radius: 5px;
        }

            .btn-mtn:hover {
                background-color: #ffd800;
                border: 1px solid #000000;
                border-radius: 15px;
                color: #808080;
            }

        .display-4 {
            font-size: 3.5vw !important;
            font-weight: 300;
            line-height: 1.2;
        }
    </style>
    <script src="~/lib/jquery/jquery.js"></script>
</head>
<body style="background:url('@Url.Content("~/images/main-bg.png")'); background-size: cover;background-position-x: right;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light navbar-toggleable-sm bg-white border-bottom box-shadow mb-3" style="background-color: transparent !important;">
            <div class="container px-5">
                <a class="navbar-brand" href="#"><h1 class="display-4 text-dark font-weight-bold" style="text-shadow: 2px 2px 2px white;">Site Management<br />Portal</h1></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse px-5">
                <ul class="navbar-nav">
                    <li class="nav-item border px-3">
                        <a href="#" class="nav-link text-white" title="Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container-fluid pl-5 position-absolute">
        <div class="d-flex flex-row pl-5">
            <img src="~/images/logo.png" class="ml-auto mr-5" style="width: 90px;" alt="logo" />
        </div>
    </div>
    <div class="container d-flex flex-column mt-4">
        <main role="main" class="pb-3 text-white mt-4" style="font-weight: bold;">
            @RenderBody()
        </main>
    </div>
    <footer class="footer border-top text-muted">
        <div class="container">
            <ul class="d-flex flex-row ml-auto" style="list-style: none; color: #ffffff;">
                <li class="mx-3">Powered by <a target="_blank" href="https://ojtssapp1/napo-portal/" class="text-white">Technical Systems Support</a></li>
                <li class="mx-3"><a href="mailto:#mtnnigeriatssnwg.ng@mtn.com" class="text-white">#MTNNigeriaTssnwg.ng@mtn.com</a></li>
                <li class="mx-3">&copy; 2021</li>
            </ul>
        </div>
    </footer>
    @*<script src="~/Identity/lib/jquery/dist/jquery.min.js"></script>*@
    <script src="~/Identity/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Identity/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
