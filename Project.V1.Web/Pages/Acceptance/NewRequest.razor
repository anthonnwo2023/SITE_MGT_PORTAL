                    </div>
                    <div class="col-md-3 mt-3">
                        <div class="form-group">
                            <SfNumericTextBox Placeholder="Tower Height (M)" FloatLabelType="@FloatLabelType.Auto" @bind-Value="@(RequestModel.TowerHeight)">
                            </SfNumericTextBox>
