                                <DropDownListFieldSettings Text="Name" Value="Id"></DropDownListFieldSettings>
                            </SfDropDownList>
                            <ValidationMessage For="@(() => RequestModel.ProjectTypeId)" />
                        </div>
                    </div>
                    <div class="col-md-3 mt-3">
                        <div class="form-group">
                            <SfNumericTextBox Placeholder="Project Year" FloatLabelType="@FloatLabelType.Auto"  @bind-Value="RequestModel.ProjectYear"
                            Format="#0" Max="@(DateTime.Now.Year)" Min="@(DateTime.Now.AddYears(-3).Year)" ShowSpinButton="true" >
                                @*<NumericTextBoxEvents TValue="double?" ValueChange="@SEProjectYear"></NumericTextBoxEvents>*@
                            </SfNumericTextBox>
                            <ValidationMessage For="@(() => RequestModel.ProjectYear)" />
                        </div>
                    </div>
                    @if (RequestModel.TechTypeId == TechTypes.FirstOrDefault(x => x.Name == "4G")?.Id)
                    {
                        <div class="col-md-3 mt-3">
                            <div class="form-group">
                                <SfTextBox Placeholder="RRU Power (w)" FloatLabelType="@FloatLabelType.Auto" @bind-Value="@(LTEInput.RRUPower)">
                                </SfTextBox>
                                <ValidationMessage For="@(() => LTEInput.RRUPower)" />
                            </div>
                        </div>
                        <div class="col-md-3 mt-3">
                            <div class="form-group">
                                <SfTextBox Placeholder="CSFB status GSM" FloatLabelType="@FloatLabelType.Auto" @bind-Value="@(LTEInput.CSFDStatusGSM)">
                                </SfTextBox>
                                <ValidationMessage For="@(() => LTEInput.CSFDStatusGSM)" />
                            </div>
                        </div>
                        <div class="col-md-3 mt-3">
                            <div class="form-group">
                                <SfTextBox Placeholder="CSFB Status WCDMA" FloatLabelType="@FloatLabelType.Auto" @bind-Value="@(LTEInput.CSFDStatusWCDMA)">
                                </SfTextBox>
                                <ValidationMessage For="@(() => LTEInput.CSFDStatusWCDMA)" />
                            </div>
                        </div>
                    }
                    <div class="col-md-3 mt-3">
                        <div class="form-group">
                            <SfDropDownList TItem="BoolDropDown" DataSource="@BoolDrops" TValue="string" CssClass="" FloatLabelType="@FloatLabelType.Auto"
                                    Placeholder="RET Configured" style="font-size: 10px;" @bind-Value="RequestModel.RETConfigured">
                                <DropDownListFieldSettings Text="Name" Value="Name"></DropDownListFieldSettings>
                            </SfDropDownList>
                            <ValidationMessage For="@(() => RequestModel.RETConfigured)" />
                        </div>
                    </div>
                    @if (RequestModel.TechTypeId == TechTypes.FirstOrDefault(x => x.Name == "4G")?.Id)
                    {
                        <div class="col-md-3 mt-3">
                            <div class="form-group">
                                <SfDropDownList TItem="BoolDropDown" DataSource="@BoolDrops" TValue="string" CssClass="" FloatLabelType="@FloatLabelType.Auto"
                                    Placeholder="Carrier Aggregation" style="font-size: 10px;" @bind-Value="RequestModel.CarrierAggregation">
                                    <DropDownListFieldSettings Text="Name" Value="Name"></DropDownListFieldSettings>
                                </SfDropDownList>
                                <ValidationMessage For="@(() => RequestModel.CarrierAggregation)" />
                            </div>
                        </div>
                    }
                    <div class="col-md-3 mt-3">
                        <div class="form-group">
                            <SfDatePicker Placeholder="Site Integrated Date" Min='@MinDateTime' Max='@MaxDateTime' FloatLabelType="@FloatLabelType.Auto"
                                  @bind-Value="@(RequestModel.IntegratedDate)">
                            </SfDatePicker>
                            <ValidationMessage For="@(() => RequestModel.IntegratedDate)" />
                        </div>
                    </div>
                    @*<div class="col-md-3 mt-3">
                        <div class="form-group">
                        <SfDatePicker Enabled="false" Placeholder="Date Submitted" FloatLabelType="@FloatLabelType.Auto" @bind-Value="@(RequestModel.DateSubmitted)">
                        </SfDatePicker>
                        <ValidationMessage For="@(() => RequestModel.DateSubmitted)" />
                        </div>
                        </div>*@
                    <div class="col-md-3">
                        <div class="form-group text-right">
                            <p class="h5 my-3 custom-font">Report Type</p>
                            <SfButtonGroup @ref="SingleSelector" CssClass="" Mode="Syncfusion.Blazor.SplitButtons.SelectionMode.Single">
                                <ButtonGroupButton IsToggle="false" @ref="SingleSSVSelector" @bind-Selected="@SSVUploadSelected">SSV</ButtonGroupButton>
                                <ButtonGroupButton IsToggle="false" @ref="SingleWaiverSelector" @bind-Selected="@WaiverUploadSelected">Waiver</ButtonGroupButton>
                            </SfButtonGroup>
                        </div>
                        <div class="form-group">
                            <label for="filePath" class="col-form-label custom-font" style="">@((WaiverUploadSelected) ? "Waiver Email" : "SSV Report")</label>
                            <SfUploader AllowMultiple="false" Multiple="false" AllowedExtensions="@((WaiverUploadSelected) ? ".msg, .eml":".xls, .xlsx")" MinFileSize="1000" MaxFileSize=@MaxFileSize AutoUpload="true" CssClass=""
                                @ref="SF_Uploader" @bind-Value="RequestModel.SSVReport">
                                <UploaderEvents OnClear="OnClear" OnRemove="OnRemove" ValueChange='e => OnFileSSVUploadChange(e, "SSV")'></UploaderEvents>
                            </SfUploader>
                            <ValidationMessage For="@(() => RequestModel.SSVReport)" />
                        </div>
                    </div>
                    <div class="col-md-3 mt-3 ml-auto">
                        <div class="form-group">
                            <div class="col-sm-12 p-0 mt-4">
                                <SfButton Disabled="@DisableSEButton" CssClass="px-2" type="submit" IsPrimary="true" IconCss="@SEUploadIconCss"
                                  IconPosition="IconPosition.Right">Create Request</SfButton>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </EditForm>
    }
    @if (BulkUploadSelected)
    {
        <EditForm Model="@Input" OnValidSubmit='e => HandleValidSubmit(e)' class="">
            <ObjectGraphDataAnnotationsValidator />
            <div class="col-md-12" style="">
                <div class="col-md-12 row">
                    <div class="col-md-3 mt-3">
                        <div class="form-group">
                            <SfNumericTextBox Min="1" Max="@MaxFileCount" Placeholder="No. of Sites" FloatLabelType="@FloatLabelType.Auto" @bind-Value="@(Input.BUSiteCount)">
                                <NumericTextBoxEvents TValue="int" ValueChange="@HandleInput"></NumericTextBoxEvents>
                            </SfNumericTextBox>
                            <ValidationMessage For="@(() => Input.BUSiteCount)" />
                        </div>
                    </div>
                    <div class="col-md-3 text-center align-self-center">
                        <div class="form-group">
                            <SfCheckBox Label="Has Waiver?" @bind-Checked="@BulkWaiverUploadSelected" @onchange="TriggerActionButton">
                            </SfCheckBox>
                        </div>
                    </div>
                    <div class="ml-auto col-md-3 text-right">
                        <a target="_blank" href="Documents/template/bulk_request.xlsx" class="btn btn-warning"><i class="fas fa-file-download"></i> Download Template</a>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="filePath" class="col-form-label custom-font" style="margin-left: 10px;">Bulk Acceptance Upload</label>
                            <SfUploader AllowMultiple="false" Multiple="false" AllowedExtensions=".xls, .xlsx" MinFileSize="1000" MaxFileSize=@MaxFileSize AutoUpload="true" CssClass=""
                                @ref="SFBulkAcceptance_Uploader" @bind-Value="Input.BUSSVReport">
                                <UploaderEvents OnClear="OnClearToNull" OnRemove="@OnRemoveToNull" ValueChange='e => OnFileUploadChange(e, "Bulk", 0)'></UploaderEvents>
                            </SfUploader>
                            <ValidationMessage For="@(() => Input.BUSSVReport)" />
                        </div>
                    </div>
                    <div class="col-md-12 mt-3" style="display:@((BulkWaiverUploadSelected) ? "none": "block")">
                        <fieldset class="py-3 px-3 border pb-2">
                            <legend style="font-size:12px">Bulk SSV Upload Properties</legend>
                            <div class="d-flex flex-row">
                                <div class="col-md-3" style="font-size:12px">Count: <span>@(TotalFileCount)</span>/@MaxFileCount</div>
                                <div class="col-md-3 text-right ml-auto" style="font-size:12px">Size: <span class="text-@((TotalFileSize > @MaxUploadFileSize) ? "danger" : "dark")">@($"{TotalFileSize:0.00}")</span>/@(MaxUploadFileSize)MB</div>
                            </div>
                        </fieldset>
                        <div class="form-group mt-1">
                            <SfUploader AllowMultiple="true" Multiple="true" AllowedExtensions=".xls, .xlsx, .ppt, .pptx" MinFileSize="1000"
                                MaxFileSize="@MaxFileSize" AutoUpload="true" CssClass="" @ref="SFBulkASSV_Uploader">
                                <UploaderEvents OnClear="OnClear" OnRemove="OnRemove" ValueChange='e => OnFileSSVUploadChange(e, "SSV")'></UploaderEvents>
                            </SfUploader>
                            <ValidationMessage For="@(() => Input.BUSSVReport)" />
                        </div>
                    </div>
                    <div class="col-md-12 mt-3" style="display:@((!BulkWaiverUploadSelected) ? "none": "block")">
                        <div class="form-group">
                            <label for="filePath" class="col-form-label custom-font" style="margin-left: 10px;">Waiver Email</label>
                            <SfUploader @ref="SF_WaiverUploader" AllowMultiple="false" Multiple="false" AllowedExtensions=".msg, .eml" MinFileSize="1000" MaxFileSize=@MaxFileSize AutoUpload="true" CssClass=""
                                @bind-Value="WaiverUpload">
                                <UploaderEvents OnClear="OnClearToNull" OnRemove="OnRemoveToNull" ValueChange='e => OnFileUploadChange(e, "Waiver", 1)'></UploaderEvents>
                            </SfUploader>
                            <ValidationMessage For="@(() => WaiverUpload)" />
                        </div>
                    </div>
                    <div class="col-md-12 mt-3" style="display:@((BulkRequestRRUCount <= 0) ? "none": "block")">
                        <fieldset class="py-3 px-3 border pb-2">
                            <legend style="font-size:12px">RRU SSV Uploads</legend>
                            @if (BulkRequestRRUData != null)
                            {
                                <table class="table table-striped table-bordered">

                                    <thead class="thead-light">
                                        <tr class="custom-font">
                                            <th>Technology</th>
                                            <th>Site Name</th>
                                            <th>Site Id</th>
                                            <th>Spectrum </th>
                                            <th>Region</th>
                                            <th style="font-size: 12px;">(* filename contains e.g. T1000_2G_RRU MOD)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            foreach (var element in BulkRequestRRUData.Select((item, index) => (item, index)))
                                            {
                                                var item = element.item;

                                                <tr class="custom-font">
                                                    <td>@TechTypes.FirstOrDefault(x => x.Id == item.TechTypeId)?.Name</td>
                                                    <td>@item.SiteName</td>
                                                    <td>@item.SiteId</td>
                                                    <td>@Spectrums.FirstOrDefault(x => x.Id == item.SpectrumId)?.Name</td>
                                                    <td>@Regions.FirstOrDefault(x => x.Id == item.RegionId)?.Name</td>
                                                    <td class="w-25">
                                                        <SfUploader @ref="@BulkUploadRRUSSVFiles[element.index]" AllowMultiple="false" Multiple="false" AllowedExtensions=".xls, .xlsx, .ppt, .pptx" MinFileSize="1000"
                                                MaxFileSize="@MaxFileSize" AutoUpload="true" CssClass="" HtmlAttributes="@htmlattributeFileUpload">
                                                            <UploaderEvents OnClear="OnClearRRU" OnRemove="OnRemoveRRU" ValueChange='e => OnFileSSVRRUUploadChange(e, "SSV")'></UploaderEvents>
                                                        </SfUploader>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            }
                        </fieldset>
                    </div>
                    @*@if (BulkWaiverUploadSelected)
                        {
                        <div class="col-md-3 mt-3">
                        <div class="form-group">
                        <label for="filePath" class="col-form-label custom-font" style="margin-left: 10px;">Waiver Email</label>
