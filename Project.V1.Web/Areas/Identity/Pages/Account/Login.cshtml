@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_Login_Layout";
}

<style type="text/css">
    #ErrorPod {
        display: none;
    }

    .validation, .field-validation-error {
        font-size: 12px;
    }

    .validation-summary-errors ul {
        margin: 0px;
        padding-left: 20px !important;
        font-size: 12px;
    }
</style>

<div class="row">
    <div class="col-md-5">
        <section>
            <form id="account" method="post">
                <h4 class="display-4">Login</h4>
                <hr />
                <div class="form-group danger" id="ErrorPod">
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Input.VendorId"></label>
                    <select asp-for="Input.VendorId" asp-items="@Model.VendorList" class="form-control border border-dark">
                        <option value="" selected>Select Vendor...</option>
                    </select>
                    <span asp-validation-for="Input.VendorId" class="text-dark validation"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Input.Username"></label>
                    <input asp-for="Input.Username" class="form-control border border-dark" />
                    <span asp-validation-for="Input.Username" class="text-dark validation"></span>
                </div><div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control border border-dark" />
                    <span asp-validation-for="Input.Password" class="text-dark"></span>
                </div>
                <div class="form-group mt-5 px-0">
                    <button type="submit" class="btn btn-dark w-100">Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>

<script type="text/javascript">
        $(document).ready(function () {
            if ($('.validation-summary-errors ul li').length > 0) {
                $('#ErrorPod').show();
            }
        });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
